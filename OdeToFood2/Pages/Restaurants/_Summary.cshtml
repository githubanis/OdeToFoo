                       asp-page="./Edit"
                       asp-route-restaurantId="@Model.Id">
                    <i>Edit</i>
                </a>*@
            <a asp-page="./Edit" class="btn btn-warning" asp-route-restaurantId="@Model.Id">
                Edit
            </a>
            @*<a class="btn btn-lg"
                   asp-page="./Delete"
                   asp-route-restaurantId="@Model.Id">
                    <i>Delete</i>
                </a>*@
