@page "{restaurantId:int}"

@model OdeToFood2.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Details";
}

<h2>@Model.Restaurent.Name</h2>
<div>
    Id: @Model.Restaurent.Id
</div>
<div>
    Loaction: @Model.Restaurent.Location
</div>
<div>
    Cuisine: @Model.Restaurent.Cuisine
</div>

@if(Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<a asp-page="./List" class="btn btn-info">All Restaurants</a>
<a asp-page=".\Edit" class="btn btn-primary">Add Restaurant</a>